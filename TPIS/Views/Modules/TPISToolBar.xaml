<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="TPIS.Views.Modules.TPISToolBar">

    <ToolBar x:Key="TPISToolBar" Height="30">
        <Button Name="tsbNew"  ToolTip="新建工程">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeNew.png" Stretch="None" />
        </Button>
        <Button Name="tsbOpen" ToolTip="打开工程">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeOpen.png" Stretch="None" />
        </Button>
        <Button Name="tsbClose" ToolTip="关闭工程">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeClose.png" Stretch="None" />
        </Button>
        <Separator />

        <Button Name="tsbSave" ToolTip="存储(Ctrl+S)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeSave.png" Stretch="None" />
        </Button>
        <Button Name="tsbSaveAs" ToolTip="另存为">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeSaveAs .png" Stretch="None" />
        </Button>
        <Button Name="tsbSaveAll" ToolTip="全部存储(Ctrl+Shift+S)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeSaveAll.png" Stretch="None" />
        </Button>
        <Separator />

        <Button Name="tsbCut" ToolTip="剪切(Ctrl+X)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeCut.png" Stretch="None" />
        </Button>
        <Button Name="tsbCopy" ToolTip="复制(Ctrl+C)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeCopy.png" Stretch="None" />
        </Button>
        <Button Name="tsbPaste" ToolTip="粘贴(Ctrl+V)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activePaste.png" Stretch="None" />
        </Button>
        <Separator />
        <Button Name="tsbUndo" ToolTip="撤销(Ctrl+Z)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeUndo.png" Stretch="None" />
        </Button>
        <Button Name="tsbRedo" ToolTip="重做(Ctrl+Y)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeRedo.png" Stretch="None" />
        </Button>
        <Separator />
        <Button Name="tsbDelete" ToolTip="删除(Del)">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeDelete.png" Stretch="None" />
        </Button>
        <Separator />
        <Button Name="tsbSelection" ToolTip="选择">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeSelection.png" Stretch="None" />
        </Button>
        <Separator />
        <Button Name="tsbRotate" ToolTip="向右旋转" Click="TPISRotate" >
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeRotate.png" Stretch="None" />
        </Button>
        <Button Name="tsbVerReverse" ToolTip="垂直翻转" Click="TPISVerReversed">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeVerticalReversed.png" Stretch="None" />
        </Button>
        <Button Name="tsbHorReverse" ToolTip="水平翻转" Click="TPISHorReversed">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeHorizentalReversed.png" Stretch="None" />
        </Button>
        <Separator />
        <Button Name="tsbSupRate" ToolTip="缩小" Click="SubRate">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeShrink.png" Stretch="None" />
        </Button>
        <TextBox IsReadOnly="True" Width="60" Name="CurRate"></TextBox>
        <Button Name="tsbSubRate" ToolTip="放大" Click="SupRate">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_activeEnlarge.png" Stretch="None" />
        </Button>
        <Separator />
        <TextBox Width="60" Name="TargetNo"></TextBox>
        <Button Name="tsbFind" ToolTip="查找" Click="FindTargNo">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_search.png" Stretch="None" />
        </Button>
        <Separator />
        <TextBox Width="60" Name="Calculate"></TextBox>
        <Button Name="tsbCal" ToolTip="查找" Click="CalculateResult">
            <Image Source="pack://application:,,,/Images/icon/activeIcon/icon_play.png" Stretch="None" />
        </Button>
    </ToolBar>
</ResourceDictionary>